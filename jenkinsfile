pipeline {
    agent any

    tools {
        nodejs "node18"
    }

    environment {
        IMAGE_NAME = "my-node-app"
        DOCKERHUB_USER = "gharbimahdi"
    }

    stages {

        stage('Checkout') {
            steps {
                echo "üì¶ Cloning repository..."
                git branch: 'main', url: 'https://github.com/MahdiGharbi-prog/devsecops-demo.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "üì• Installing npm packages..."
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                echo "üß™ Running tests..."
                sh 'npm test || echo "‚ö†Ô∏è No tests found, skipping..."'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "üê≥ Building Docker image..."
                script {
                    sh "docker build -t ${IMAGE_NAME}:latest ."
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                echo "üì§ Pushing image to DockerHub..."
                withCredentials([string(credentialsId: 'dockerhub-token', variable: 'DOCKER_TOKEN')]) {
                    sh '''
                        echo "$DOCKER_TOKEN" | docker login -u ${DOCKERHUB_USER} --password-stdin
                        docker tag ${IMAGE_NAME}:latest ${DOCKERHUB_USER}/${IMAGE_NAME}:latest
                        docker push ${DOCKERHUB_USER}/${IMAGE_NAME}:latest
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Build and deployment succeeded!"
        }
        failure {
            echo "‚ùå Build failed. Please check the logs."
        }
    }
}
